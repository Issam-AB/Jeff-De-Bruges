generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Product {
  id              String   @id @default(cuid())
  ref             String   @unique
  name            String
  slug            String   @unique
  dimensions      String
  mainCategory    String
  subCategory     String
  initialPrice    Float
  VenteflashPrice Float
  articleRougePrice Float?
  mainImage       String
  gallery         String[]
  isActive        Boolean  @default(true)
  isArticleRouge  Boolean  @default(false)
  store           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([mainCategory, subCategory])
  @@index([isActive])
  @@index([isArticleRouge])
  @@index([store])
}

model Category {
  id            String   @id @default(cuid())
  name          String   @unique
  subcategories String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
